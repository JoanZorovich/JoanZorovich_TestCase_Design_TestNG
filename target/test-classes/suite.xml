<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Test Suite ESPN">
    <listeners>
        <listener class-name="org.espn.utils.Listener"/>
    </listeners>

    <parameter name="url" value="https://www.espnqa.com/?src=com&amp;_adblock=true&amp;espn=cloud"/>

    <test name="ESPN HomePage Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="org.espn.tests.HomePageTest"/>
        </classes>
    </test>
    <test name="ESPN Login test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="org.espn.tests.LoginUserTest"/>
        </classes>
    </test>
    <test name="ESPN Log Out test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="org.espn.tests.LogOutUserTest"/>
        </classes>
    </test>
</suite>